// Test new string methods: split(), lines(), words()

fn main() {
    let text = "hello world"

    // Test split()
    let words = text.split(" ")
    print(words[0])  // Should print: hello
    print(words[1])  // Should print: world

    // Test lines()
    let lines = "line1\nline2".lines()
    print(lines[0])  // Should print: line1
    print(lines[1])  // Should print: line2

    // Test words()
    let ws = "hello world rust".words()
    print(ws[0])  // Should print: hello
    print(ws[1])  // Should print: world
    print(ws[2])  // Should print: rust
}
