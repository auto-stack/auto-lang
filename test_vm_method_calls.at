fn main() {
    // Test 1: Basic VM method call
    let words = "hello world".split(" ")
    print(words[0])  // Should print: hello
    
    // Test 2: Method chaining with array indexing
    let first = "hello world".split(" ")[0]
    print(first)  // Should print: hello
    
    // Test 3: Multiple VM method calls
    let text = "line1\nline2"
    let all_lines = text.lines()
    print(all_lines[0])  // Should print: line1
    
